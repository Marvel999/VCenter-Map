<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VCentreMap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorsecondry</item>
        <item name="colorSecondaryVariant">@color/colorsecondryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/Theme.VCentreMap.Button</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VCentreMap.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VCentreMap.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
    </style>
    <style name="Theme.VCentreMap.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VCentreMap.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>